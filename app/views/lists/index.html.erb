<div class="banner" style="background-image: url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2250&q=80)">
  <div class="container">
    <h1>Save any kind of <strong>movie</strong> !</h1>
    <p>
      <span id="banner-typed-text"></span>
      <%= link_to 'Create a new list', new_list_path(@list) %>
    </p>
  </div>
</div>

<div class="container-list">
  <div class="list-text">
    <h3>My Lists</h3>
    <%= link_to 'Create a new list', new_list_path(@list), class: "btn btn-success" %>
  </div>

  <div class="lists">
    <% @lists.each do |list| %>
      <%= render '/lists/list', list: list %>
    <% end %>
  </div>


</div>
